generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Estudiante {
  id       Int     @id @default(autoincrement())
  nombre   String
  correo   String  @unique
  cursos   Matricula[]
}

model Curso {
  codigo_curso         Int     @id @default(autoincrement())
  nombre     String
  cupoMaximo Int
  matriculas Matricula[]
}

model Matricula {
  codigo_matricula         Int      @id @default(autoincrement())
  estudiante Estudiante @relation(fields: [estudianteId], references: [id])
  estudianteId Int
  curso     Curso     @relation(fields: [cursoId], references: [codigo_curso])
  cursoId   Int
}
